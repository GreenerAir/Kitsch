<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accountbackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".initiation.SignIn">

    <!-- CardView for the login form -->

    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/white_logo_of" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardMaxElevation="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- Username or email input -->
            <EditText
                android:id="@+id/username"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edittext"
                android:hint="Username"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <!-- Email input -->
            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:hint="E-mail address"
                android:inputType="textWebEmailAddress"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <!-- Password input -->
            <TextView
                android:id="@+id/signupText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="An Upercase letter, a Number and a Special Character is required for the password."
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pssw"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:hint="Password"
                android:inputType="textWebPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/psswC2"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:hint="Confirm Password"
                android:inputType="textWebPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Signup Text -->
    <Button
        android:id="@+id/signupButton"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="200dp" />

    <!-- Sign Up Button -->
    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:text="Already have an account?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:padding="8dp"
        android:text="Login!"
        android:textColor="@color/white"
        android:textSize="18sp"
        card_view:cornerRadius="200dp" />

</LinearLayout>
